PACKAGE com.softicar.platform.db.sqml.builtin

// -------------------- abs(x) -------------------- //

FUNCTION Integer abs(Integer x) {
	SQL {ABS($x)}
}

FUNCTION Long abs(Long x) {
	SQL {ABS($x)}
}

FUNCTION Float abs(Float x) {
	SQL {ABS($x)}
}

FUNCTION Double abs(Double x) {
	SQL {ABS($x)}
}

FUNCTION Decimal abs(Decimal x) {
	SQL {ABS($x)}
}

