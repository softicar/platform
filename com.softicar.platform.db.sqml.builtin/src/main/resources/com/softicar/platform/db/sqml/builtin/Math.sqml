FUNCTION Double ceil(Double x) {
	SQL {CEIL($x)}
}

FUNCTION Decimal ceil(Decimal x) {
	SQL {CEIL($x)}
}

// -------------------- floor(x) -------------------- //

FUNCTION Float floor(Float x) {
